{
    int steps = 1000;
    double pi = 0;

    for (int i = 0; i < steps; i++)
    {
        double term = 1.0 / (2 * i + 1);
        if (i % 2 == 0) pi += term;
        else pi -= term;
    }

    pi *= 4;
    return pi.ToString();
}

